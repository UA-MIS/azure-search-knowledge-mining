
@{
    ViewData["Title"] = "AddClass";
}

<!DOCTYPE html>
<html>

<h2 style="text-align: center; margin-top: 150px;">Create New Classification</h2>
<br>
<br>
<div class="log"></div>
<div style="text-align: center;">
    <form class="col-md-pull-6" id="EntityForm" name="DocForm" style="display:inline;">
        <textarea id="selectedtext1" name="saveInfo" rows="1" cols="31" style="resize:none; text-align:left;"></textarea>
    </form>
    <button class="col-md-push-6" style="color: #fff; vertical-align: top; padding-bottom: 5px;  background-color: #0078d7; border: 1px solid transparent;  font-size: 13px;" onclick="addDocClass()">Add Document Class</button>
</div>
<br>
<div style="text-align: center;">
    <form class="col-md-pull-6" id="TextForm" name="TextForm" style="display:inline;">
        <textarea id="selectedtext2" name="saveInfo" rows="1" cols="37" style="resize:none; text-align:left;"></textarea>
    </form>
    <button class="col-md-push-6" style="color: #fff; vertical-align: top; padding-bottom: 5px;  background-color: #0078d7; border: 1px solid transparent;  font-size: 13px;" onclick="addTextClass()">Add Text Class</button>
</div>
<br>
<div style="text-align: center;">
    <form class="col-md-pull-6" id="EntityForm" name="EntityForm" style="display:inline;">
        <textarea id="selectedtext3" name="saveInfo" rows="1" cols="35" style="resize:none; text-align:left;"></textarea>
    </form>
    <button class="col-md-push-6" style="color: #fff; vertical-align: top; padding-bottom: 5px;  background-color: #0078d7; border: 1px solid transparent;  font-size: 13px;" onclick="addEntityClass()">Add Entity Class</button>
</div>
<br>

<br>
<br>
<div style="text-align: center;">
    <button class="col-md-push-6" style="color: #fff; vertical-align: top; padding-bottom: 5px;  background-color: #0078d7; border: 1px solid transparent; font-size: 13px;"> @Html.ActionLink("Home", "Index", "Home", null, new { style = "color: white" })</button>


</div>

</html>
<script>
    function addDocClass() {

        var text = document.getElementById("selectedtext1").value;
        if (text != "") {
             $.ajax({
            type: "POST",
            url: "/Home/SaveDocClass", //make this the name of the backend method
            data: { text: text },
            success: function () {
                location.reload();
            }
        });
        } else {
            alert("Please enter some text");
        }
       
    }
</script>

<script>
    function addTextClass() {

        var text = document.getElementById("selectedtext2").value;

        if (text != "") {
             $.ajax({
            type: "POST",
            url: "/Home/SaveTextClass", //make this the name of the backend method
            data: { text: text },
            success: function () {
                location.reload();
            }
        });
        } else {
            alert("Please enter some text");
        }
    }
</script>

<script>
    function addEntityClass() {

        var text = document.getElementById("selectedtext3").value;

        if (text != "") {
             $.ajax({
            type: "POST",
            url: "/Home/SaveEntityClass", //make this the name of the backend method
            data: { text: text },
            success: function () {
                location.reload();
            }
        });
        } else {
            alert("Please enter some text");
        }
    }
</script>